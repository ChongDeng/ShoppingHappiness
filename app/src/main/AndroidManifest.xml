<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chongdeng.jufeng.shoppinghappiness">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 申明权限 操作SD卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 申请拍照权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/scut_style">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".SigninActivity" />
        <activity android:name=".SignupActivity" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MerchandiseInfoActivity" />
        <activity
            android:name=".MerchandiseReviewActivity"
            android:label="@string/title_activity_merchandise_review" />
        <activity android:name=".MerchandiseWriteReviewActivity" />
        <activity
            android:name=".MerchandiseSearchPageActivity"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".MerchandiseSearchResultActivity"
            android:label="" />
        <activity
            android:name=".MerchandiseUploadActivity"
            android:label="@string/title_activity_merchandise_upload"></activity>
    </application>

</manifest>