<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chongdeng.jufeng.shoppinghappiness">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/scut_style">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SigninActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".HomeActivity" android:theme="@style/MyTheme"/>
        <activity android:name=".MerchandiseInfoActivity" />
        <activity
            android:name=".MerchandiseReviewActivity"
            android:label="@string/title_activity_merchandise_review" />
        <activity android:name=".MerchandiseWriteReviewActivity" />
        <activity
            android:name=".MerchandiseSearchPageActivity"
            android:theme="@style/MyTheme" />
        <activity android:name=".MerchandiseSearchResultActivity"
            android:label=""></activity>
    </application>

</manifest>