<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="scut_style" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="blackTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="colorPrimaryTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="whiteTextStyleTitle">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="WhiteBoldTextStyleTitle">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="greyTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>

    <style name="whiteTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="blackTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="greyTextStyleSmaller">
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>
    <style name="colorPrimaryTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_text_color_normal</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/indianred</item>
    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/holo_blue_light</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/lime_green</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/gold</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/original_border_color</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/indianred</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

    <style name="gray_height_1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
    </style>


    <style name="SmallGreyTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

    <!-- 选择照片底部弹出层 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>
