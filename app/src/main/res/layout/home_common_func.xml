<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight = "1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <ImageView
            android:id="@+id/home_common_func_pic1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_merchandise" />

            <TextView
                android:id="@+id/pic1_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="加载中"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight = "1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_common_func_pic2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_merchandise" />

        <TextView
            android:id="@+id/pic2_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="加载中"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight = "1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_common_func_pic3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_merchandise" />

        <TextView
            android:id="@+id/pic3_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="加载中"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight = "1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_common_func_pic4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_merchandise" />

        <TextView
            android:id="@+id/pic4_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="加载中"
            android:textSize="@dimen/textSize_small"/>
    </LinearLayout>




</LinearLayout>