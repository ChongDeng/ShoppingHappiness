<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/me_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/percent1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        android:background="#FFCCBC">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/UserThumbnail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_pic"
           />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/blackTextStyle"
            android:layout_below="@id/UserThumbnail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="高圆圆"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/percent2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/percent1"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        app:layout_heightPercent="50%">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
            android:id="@+id/FirstRow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight = "1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/order_management"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/imageview_border"
                        android:layout_gravity="center_horizontal"
                        android:padding="15dp"
                        android:src="@drawable/order_management" />

                    <TextView
                        android:id="@+id/order_management_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="订单管理" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight = "1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/message_management"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/imageview_border"
                        android:layout_gravity="center_horizontal"
                        android:padding="15dp"
                        android:src="@drawable/message_management" />

                    <TextView
                        android:id="@+id/message_management_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="消息管理" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight = "1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/complaint_management"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/imageview_border"
                        android:layout_gravity="center_horizontal"
                        android:padding="15dp"
                        android:src="@drawable/complaint_management" />

                    <TextView
                        android:id="@+id/complaint_management_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="申述管理" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/SecondRow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight = "1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/money_withdraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/imageview_border"
                        android:layout_gravity="center_horizontal"
                        android:padding="15dp"
                        android:src="@drawable/withdraw_management" />

                    <TextView
                        android:id="@+id/money_withdraw_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="我要提现" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight = "1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/score_management"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/imageview_border"
                        android:layout_gravity="center_horizontal"
                        android:padding="15dp"
                        android:src="@drawable/score_management" />

                    <TextView
                        android:id="@+id/score_management_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="积分经验" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight = "1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/advertise_management"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/imageview_border"
                        android:layout_gravity="center_horizontal"
                        android:padding="15dp"
                        android:src="@drawable/advertise_management" />

                    <TextView
                        android:id="@+id/advertise_management_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="推广收益" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>